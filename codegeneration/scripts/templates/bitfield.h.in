#pragma once

#include <glbinding/nogl.h>
#include <glbinding/types.h>


namespace gl
{

class GLbitfield
{
public:
    GLbitfield() : bitfield(0) { }
    GLbitfield(unsigned int v) : bitfield(v) { }

    template <typename T> GLbitfield(T v) : bitfield(static_cast<unsigned int>(v)) { }
	
	operator unsigned int() { return bitfield; }

protected:
	unsigned int bitfield;
};


%s

// import bitfields to namespace
%s

} // namespace gl
